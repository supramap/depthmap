<% content_for :head do %>
  <script src="/javascripts/sorttable.js"></script>
<% end %>

<h1>Listing Pointmaps</h1>

<p><%= link_to 'New pointmap', new_pointmap_path %></p>


<table class="sortable">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Oil Spill?</th>
    <th>Public?</th>
    <th>Owner</th>
    <th>Options</th>
  </tr>

<% @pointmaps.each do |pointmap| %>
  <tr>
    <td><%=h pointmap.name %></td>
    <td><%=h pointmap.description %></td>
    <td><%=h pointmap.oil_spill %></td>
    <td><%=h pointmap.public %></td>
    <td><%=h pointmap.user.login %></td>
    <td>
      <%= link_to 'Show', pointmap %> |
      <%= link_to 'Edit', edit_pointmap_path(pointmap) %> |
      <%= link_to 'Delete', pointmap, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
